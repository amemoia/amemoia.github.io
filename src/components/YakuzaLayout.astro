---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";
const currentGame =
    "https://store.steampowered.com/app/2058190/Lost_Judgment/";
const currentTitle = "Lost Judgment"

// Embed information
const pageTitle = "ame / yakuza"
const description = "buh"

import yakuzaTierlist from "../img/sites/Yakuza-Tierlist.png";
---

<BaseLayout pageTitle={pageTitle}>
    <div>
        <h1 class="yakuza-intro">
            <span>Alex's Yakuza Series Progress</span>
        </h1>
    </div>
    <div class="container">
        <h2>
            Currently on: <a href={currentGame}
                >{currentTitle}</a
            >
        </h2>
        <div class="yakuza-checklist">
            <slot />
        </div>
    </div>
    <div class="container">
        <h2>Tier list so far:</h2>
        <Image
            src={yakuzaTierlist}
            class="yakuza-tierlist"
            alt="My personal tier list of games in the Yakuza / Like a Dragon franchise."
        />
    </div>
</BaseLayout>
