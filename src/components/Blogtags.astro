---
import { getCollection } from "astro:content";
import ContTitle from "./ContTitle.astro";
import Container from "./Container.astro";
const allPosts = await getCollection('blog');
const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---
<Container args="container-color-gray">
    <ContTitle args="row blog-taglist no-halftone-override" tier={1}>
        <script is:inline define:vars={{uniqueTags}}>
            uniqueTags.map((tag) => {
                const parent = document.getElementsByClassName('blog-taglist')[0]
                const a = document.createElement('a');
                a.href = "/tags/"+tag
                a.classList.add('tag-button')
                a.classList.add('accent-none')
                const hash = '<i class="fa-solid fa-hashtag accent-red"></i>'
                a.innerHTML = hash+"<span>"+tag+"</span>"
                parent.append(a)
            })
        </script>
    </ContTitle>
</Container>