---
import LayoutBase from "../components/LayoutBase.astro";
import Blogpost from "../components/Blogpost.astro";
import Blogtags from "../components/Blogtags.astro";
import rss, { pagesGlobToRssItems } from '@astrojs/rss';
import { getCollection } from "astro:content";

const blogPosts = await getCollection('blog')
// Embed information
const pageTitle = "ame / blog"
const description = "buh"
import '../styles/blog.css'
---

<LayoutBase pageTitle={pageTitle}>
    <Blogtags />
    {
        blogPosts.map((post) => <Blogpost id={post.id} title={post.data.title} description={post.data.description} date={post.data.pubDate} tags={post.data.tags} />).reverse()
    }
</LayoutBase>
